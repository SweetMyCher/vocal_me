<%= form_with(model: text) do |form| %>
  <% if text.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(text.errors.count, "error") %> prohibited this text from being saved:</h2>

      <ul>
        <% text.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :text %>
    <%= form.text_area :text, size: '50x50' %>
  </div>

  <div class="field">
    <%= select("text", "artist_id", Artist.all.collect { |p| [p.name, p.id] }) %>
    <%= link_to 'New Artist', new_artist_path %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
